{
  "manifest_version": 3,
  "name": "PAGO Core",
  "description": "Process-Aware Governance Overlay para sistemas administrativos legados.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "PAGO Core",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": ["scripting"],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "file:///*"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "file:///*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}